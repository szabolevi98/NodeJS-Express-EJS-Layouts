<% if (locals.wrongSecretDelete) { %>
    <script>
        $(document).ready(function(){
            $("#deleteConfirmModal").modal('show');
        });
    </script>
<% } %>
<% if (locals.wrongSecretModify) { %>
    <script>
        $(document).ready(function(){
            $("#modifyModal").modal('show');
        });
    </script>
<% } %>
<% if (locals.articleSuccess) { %>
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">Article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <p>Article posted successfully!</p>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $("#successModal").modal('show');
        });
    </script>
<% } %>
<% if (locals.articleDelete) { %>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                </div>
                <div class="modal-body">
                    <p>Article deleted successfully!</p>
                </div>
                <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>    
    <script>
        $(document).ready(function(){
            $("#deleteModal").modal('show');
            window.history.pushState('', '', '/');
        });
    </script>
<% } %>
<% if (locals.articleModify) { %>
    <div class="modal fade" id="modifySuccessModal" tabindex="-1" role="dialog" aria-labelledby="modifySuccessModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="modifySuccessModalLabel">Article</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                    <p>Article modified successfully!</p>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>    
    <script>
        $(document).ready(function(){
            $("#modifySuccessModal").modal('show');
        });
    </script>
<% } %>
<% if(locals.contactFormSuccess) { %>
    <div class="modal fade" id="successContactModal" tabindex="-1" role="dialog" aria-labelledby="successContactModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successContactModalLabel">Contact</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Your message has been recorded in the database!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <a class="btn btn-primary mr-1" href="/contact/find/<%= messageId %>" role="button">Check message</a>
                </div>
            </div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            $("#successContactModal").modal('show');
        });
    </script>
<% } %>
